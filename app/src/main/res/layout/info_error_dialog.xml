<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/background_bottom_dialog"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_marginTop="12sp"
        android:layout_gravity="center"
        android:layout_width="36sp"
        android:layout_height="2sp"
        android:background="@drawable/bacground_view"/>

    <LinearLayout
        android:layout_marginTop="12sp"
        android:layout_marginLeft="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:src="@drawable/bx_error" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ошибка!"
            android:textColor="#7E0C0C"
            android:textSize="18sp"/>
    </LinearLayout>
    <TextView
        android:layout_marginLeft="16sp"
        android:layout_marginTop="12sp"
        android:id="@+id/error_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Очень большая ошибка"
        android:textColor="#1e1e1e"
        android:textSize="14sp"/>

    <TextView
        android:layout_marginTop="12sp"
        android:text="Very long and length text with info about error which i want write this"
        android:paddingTop="8sp"
        android:layout_marginLeft="8sp"
        android:paddingLeft="8sp"
        android:paddingRight="8sp"
        android:textColor="#1e1e1e"
        android:paddingBottom="8sp"
        android:layout_marginRight="8sp"
        android:background="@drawable/background_for_text"
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
  <TextView
      android:id="@+id/change_btn"
      android:layout_marginRight="8sp"
      android:layout_marginTop="12sp"
      android:layout_gravity="end"
      android:paddingLeft="12sp"
      android:paddingRight="12sp"
      android:paddingTop="4sp"
      android:paddingBottom="4sp"
      android:textColor="#f5f5f5"
      android:background="@drawable/bakcground_btn_change"
      android:textSize="16sp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="40dp"
      android:text="Исправить"/>
</LinearLayout>