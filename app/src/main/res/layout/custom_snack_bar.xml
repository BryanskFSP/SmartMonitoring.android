<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="55sp">
    <androidx.cardview.widget.CardView
        android:paddingBottom="10sp"
        app:cardElevation="1sp"
        android:layout_marginLeft="1sp"
        android:layout_marginRight="1sp"
        android:layout_marginBottom="1sp"
        app:cardCornerRadius="16sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:background="#3342AAFF"
            android:paddingLeft="16sp"
            android:id="@+id/main_layout"
            android:paddingBottom="16sp"
            android:paddingTop="16sp"
            android:paddingRight="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image"
                android:layout_width="36sp"
                android:layout_height="36sp"
                android:src="@drawable/wrning_line"/>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_weight="2.5"
                android:layout_marginLeft="16sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textColor="#7E0C0C"
                    android:textSize="14sp"
                    android:text="Обнаружена ошибка!"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="#7E0C0C"
                    android:id="@+id/text"
                    android:textSize="12sp"
                    android:text="Большой объем памяти"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/correct"
                android:gravity="center"
                android:layout_gravity="center"
                android:paddingTop="4sp"
                android:paddingBottom="4sp"
                android:paddingLeft="8sp"
                android:paddingRight="8sp"
                android:textColor="#f5f5f5"
                android:textSize="14sp"
                android:text="Исправить"
                android:background="@drawable/bakcground_btn_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>